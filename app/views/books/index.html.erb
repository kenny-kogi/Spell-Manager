<h1>All Books</h1>
<div>
  <span class="left"><%= link_to "Create New", new_book_path %></span>
  <span class="right"><%= link_to "Home", root_path %></span>
</div>
<br>
<br>
<br>
<br>

<table>
  <thead>
    <tr>
      <th><%= link_to "Spell Count", books_path(order_by: "spell_count") %></th>
      <th><%= link_to "Name", books_path(order_by: "name") %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.spells.count %></td>
        <td><%= link_to book.name, book_path(book) %></td>
        <td><%= button_to "Delete Book", book, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
