<h1>All Spells</h1>

<%= link_to "Create New Spell", new_spell_path %>&ensp;
<%= link_to "Home", root_path %>
<table>
  <thead>
    <tr>
      <th>Level</th>
      <th>SpellName</th>
      <th>School</th>
      <th>Classes</th>
      <th>Concentration</th>
      <th>Edit/Add to Book</th>
    </tr>
  </thead>
  <tbody>
    <% @spells.each do |spell| %>
      <tr>
        <td><%= spell.level%></td>
        <td><%= link_to spell.name, spell_path(spell) %></td>
        <td><%= spell.school %></td>
        <td><%= spell.classes %></td>
        <td><%= spell.concentration %></td>
        <td>
        <div><%= link_to "Edit", edit_spell_path(spell)%></div>
        <div><%= link_to "Add to Book", new_spell_book_path(spell_id: spell.id)%></div>        
        </td>
      </tr>
    <% end %>
  </tbody>
</table>



       