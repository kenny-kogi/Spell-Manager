<h1>All Spells</h1>

<div>
  <span class="left"><%= link_to "Create New Spell", new_spell_path %></span>
  <span class="right"><%= link_to "Home", root_path %></span>
</div>
<br>
<br>

<%= form_for spells_path, method: :get do |form| %>
<div class = "row">
  <div class = "column">
    <ul style="list-style-type:none">
      <%= form.label :level %>
      <% Spell::LEVEL.each do |c| %>
      <li><%= form.check_box :level, { multiple: true }, c, false %></li>
      <%= c %>
      <% end %>
    </ul>
  </div>

  <div class = "column">
    <ul style="list-style-type:none">
      <%= form.label :school %>
      <% Spell::SCHOOL_OPTIONS.each do |c| %>
      <li><%= form.check_box :school, { multiple: true }, c, false %></li>
      <%= c %>
      <% end %>
    </ul>
  </div>

  <div class = "column">
    <ul style="list-style-type:none">
      <%= form.label :classes %>
      <% Spell::CLASS_OPTIONS.each do |c| %>
      <li><%= form.check_box :classes, { multiple: true }, c, false %></li>
      <%= c %>
      <% end %>
    </ul>
  </div>
</div>
<div class = "button">
  <%= form.submit "Apply Filter" %>
</div>
  <% end %>

<br>
<br>

<table>
  <thead>
    <tr>
      <th>Level</th>
      <th>SpellName</th>
      <th>School</th>
      <th>Classes</th>
      <th>Concentration</th>
      <th>Edit/Add to Book</th>
    </tr>
  </thead>
  <tbody>
    <% @spells.each do |spell| %>
      <tr>
        <td><%= spell.level%></td>
        <td><%= link_to spell.name, spell_path(spell) %></td>
        <td><%= spell.school %></td>
        <td><%= spell.classes %></td>
        <td><%= spell.concentration %></td>
        <td>
        <div><%= link_to "Edit", edit_spell_path(spell)%></div>
        <div><%= link_to "Add to Book", new_spell_book_path(spell_id: spell.id)%></div>        
        </td>
      </tr>
    <% end %>
  </tbody>
</table>



       